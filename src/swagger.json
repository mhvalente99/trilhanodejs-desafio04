{
  "openapi": "3.0.0",
  "info": {
      "title": "Atlas",
      "description": "Essa é uma documentação sobre a Atlas API",
      "version": "1.0.0",
      "contact": {
          "email":"matheushenrique4@hotmail.com"
      }
  },
  "tags": [{
    "name": "Users",
    "description": "Management Users"
  }],
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create user",
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Matheus",
                  "email": "matheushenrique4@hotmail.com"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean",
                      "example": "false"
                    },
                    "id": {
                      "type": "string",
                      "format": "uuid",
                      "example": "38cd8be8-1bcc-48f7-9e5f-f2d31ad0cf3f"
                    },
                    "name": {
                      "type": "string",
                      "example": "Matheus"
                    },
                    "email": {
                      "type": "string",
                      "example": "matheus@teste.com.br"
                    },
                    "created_at": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2022-05-25T00:24:49.325Z"
                    },
                    "updated_at": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2022-05-25T00:24:49.325Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error - Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "User with email already exists!"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "List all users",
        "description": "Just users ```admin``` can use this route",
        "parameters": [
          {
            "name": "user_id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "style": "simple"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "admin": {
                        "type": "boolean",
                        "example": false
                      },
                      "id": {
                        "type": "string",
                        "format": "uuid",
                        "example": "e58a970b-1352-425b-99f3-9604c2c1dba9"
                      },
                      "name": {
                        "type": "string",
                        "example": "Matheus"
                      },
                      "email": {
                        "type": "string",
                        "format": "email",
                        "example": "matheus@example.com.br"
                      },
                      "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2022-05-25T00:24:49.325Z"
                      },
                      "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2022-05-25T00:24:49.325Z"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "This user is not admin!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
      }
    }
  }
}